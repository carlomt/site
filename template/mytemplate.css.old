html {
  position: relative;
  min-height: 100%;
}
body {
  padding-top: 50px;
  padding: 40px 15px;
  /* Margin bottom by footer height */
  margin-bottom: 60px;
}
.mytemplate {
  padding: 40px 15px;
  text-align: center;
}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  background-color: #f5f5f5;
}

body > .container {
  padding: 60px 15px 0;
}
.container .text-muted {
  margin: 20px 0;
}

.footer > .container {
  font-size: 70%;
  padding-top: 10px;
  padding-right: 15px;
  padding-left: 15px;
}

code {
  font-size: 80%;
}